<% title t('activerecord.models.events.plural') %>

<table>
  <tr>
    <th><%= t('activerecord.models.events.title') %></th>
    <th><%= t('activerecord.models.events.description') %></th>
    <th><%= t('common.date') %></th>
    <th><%= t('activerecord.models.events.price') %></th>
    <th><%= t('activerecord.models.events.currency') %></th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% for event in @events %>
    <tr>
      <td><%= event.name %></td>
      <td><%= event.description %></td>
      <td><%= event.event_date %></td>
      <td><%= event.price %></td>
      <td><%= event.currency %></td>
      <td><%= link_to t('common.details'), event %></td>
      <td><%= link_to t('common.edit'), edit_event_path(event) %></td>
      <td><%= link_to t('common.delete'), event, :confirm => t('common.confirmation'), :method => :delete %></td>
      <td><%= link_to t('common.send_mail'), events_notify_path(event), :confirm => t('common.confirmation') %></td>
    </tr>
  <% end %>
</table>
<%= will_paginate @events, :previous_label => t("previous"), :next_label => t("next") %>
<p><%= link_to t('activerecord.models.events.new_event'), new_event_path %></p>