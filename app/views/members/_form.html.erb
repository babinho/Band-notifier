<%= form_for @member, :html => {:class => "form"} do |f| %>
<div class="group">
  <%= f.label t('activerecord.models.members.first_name'), :class=>"label" %>
    <%= f.text_field :first_name, :class=>"text_field" %>
</div>
  <div class="group">
    <%= f.label t('activerecord.models.members.last_name'), :class=>"label" %><br />
    <%= f.text_field :last_name, :class => "text_field" %>
  </div>
  <div class="group">
    <%= f.label t('common.email'), :class => "label" %><br />
    <%= f.text_field :email, :class => "text_field" %>
  </div>
  <div class="group navform wat-cf">
    <button type="submit" class="button">
      <%= image_tag "icons/tick.png", :class => "button" %> Save
   </button>
    <%= link_to(image_tag("icons/cross.png") + " Cancel", members_path, :class =>"button") %>
  </div>
<% end %>
