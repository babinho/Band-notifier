<%= form_for @event, :html => {:class => "form"} do |f| %>
  <div class="group">
    <%= f.label t('activerecord.models.events.title'), :class => "label" %>
    <%= f.text_field :name, :class=>"text_field" %>
  </div>
  <div class="group">
    <%= f.label t('activerecord.models.events.description'), :class =>"label" %>
    <%= f.text_area :description, :class => "text_area" %>
  </div>
  <div class="group">
    <%= f.label t('common.date'), :class => "label" %>
    <%= f.text_field :event_date, :class => "text_field",:id => "datepicker" %>
  </div>
  <div class="group">
    <%= f.label t('activerecord.models.events.price'), :class => "label" %>
    <%= f.text_field :price, :class => "text_field" %>
  </div>
  <div class="group">
    <%= f.label t('activerecord.models.events.currency'), :class =>"label" %><br />
    <%= f.text_field :currency, :class => "text_field" %>
  </div>
  <div class="group">
    <%= f.label t('activerecord.models.events.public'), :class => "label" %><br/>
    <%= f.check_box :public, :class => "checkbox" %>
  </div>
  <div class="group navform wat-cf">
    <button type="submit" class="button">
      <%= image_tag "icons/tick.png", :class => "button" %> Save
    </button>
    <%= link_to(image_tag("icons/cross.png") + " Cancel", events_path, :class =>"button") %>
  </div>
<% end %>
