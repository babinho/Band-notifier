<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title><%= h(yield(:title) || 'Band Notifier') %></title>
    <%= stylesheet_link_tag "jqtouch.min.css", "apple_mobile.css","mobile.css" %>
    <%= javascript_include_tag "jquery.min.js", "jqtouch.min.js", "mobile" %>
    <%= yield(:head) %>
  </head>
  <body>
    <div class="current">
      <%- if show_title? -%>
      <div class="toolbar">
        <%= link_to t('activerecord.models.events.plural'), upcoming_path, :class => "back" unless current_page? upcoming_path %>
        <h1><%=h yield(:title) %></h1>
        <%= yield(:toolbar) %>
      </div>
      <%- end -%>

      <% unless flash.empty? %>
        <div class="info">
        <%- flash.each do |name, msg| -%>
          <%= content_tag :div, msg, :id => "flash_#{name}" %>
        <%- end -%>
        </div>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
