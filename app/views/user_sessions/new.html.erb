<% title t('activerecord.models.user_sessions.login') %>
<div class="block" id="block-login">
  <h2>Band Notifier</h2>
<div class="content login">
    <%= form_for :user_session, @user_session, :url => { :action => "create" }, 
      :html => {:class => "form login"} do |f| %>
        <div class="flash">
          <% flash.each do |type, message| -%>
            <div class="message <%= type %>">
              <p><%= message %></p>
            </div>
          <% end -%>
        </div>
  <div class="group wat-cf">
    <div class="left">
      <%= f.label t('activerecord.models.users.username'), :class => "label right" %>
    </div>
    <div class="right">
      <%= f.text_field :username, :class => "text_field" %>
    </div>
  </div>
  <div class="group wat-cf">
    <div class="left">
      <%= f.label t('activerecord.models.users.password'), :class => "label right" %>
    </div>
    <div class="right">
      <%= f.password_field :password, :class => "text_field" %>
    </div>
  </div>
  <div class="group wat-cf">
    <div class="left">
      <%= f.label t('activerecord.models.user_sessions.remember_me'), :class => "label right" %>
    </div>
    <div class="right">
      <%= f.check_box :remember_me, :class => "checkbox toggle" %>
    </div>
  </div>
  <div class="group navform wat-cf">
    <div class="right">
      <%= f.submit t('activerecord.models.user_sessions.login'), :class => "button" %> 
    </div>
  </div>
<% end %>
</div>
</div>
